{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"removeComments": true,
	    "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "noEmitHelpers": false,
	    "sourceMap": true
	},
	"exclude": [
		"node_modules"
	],
	"filesGlob": [
		"./src/**/*.ts",
		"!./node_modules/**/*.ts"
	]
}